<UserControl x:Class="TaskFlow.Controls.CustomLoader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskFlow.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Rectangle Width="20" Height="125" Margin="10" Fill="DodgerBlue" RenderTransformOrigin="0.5,1">
                <Rectangle.RenderTransform>
                    <ScaleTransform x:Name="scale1" ScaleY="1" />
                </Rectangle.RenderTransform>
                <Rectangle.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                <DoubleAnimation Storyboard.TargetName="scale1" 
                                                 Storyboard.TargetProperty="ScaleY"
                                                 From="1" To="0.3"
                                                 Duration="0:0:1.0"
                                                 BeginTime="0:0:0">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseInOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Rectangle.Triggers>
            </Rectangle>

            <Rectangle Width="20" Height="125" Margin="10" Fill="DodgerBlue" RenderTransformOrigin="0.5,1" >
                <Rectangle.RenderTransform>
                    <ScaleTransform x:Name="scale2" ScaleY="1" />
                </Rectangle.RenderTransform>
                <Rectangle.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                <DoubleAnimation Storyboard.TargetName="scale2" 
                                                 Storyboard.TargetProperty="ScaleY"
                                                 From="1" To="0.3"
                                                 Duration="0:0:1.1"
                                                 BeginTime="0:0:0.15">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseInOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Rectangle.Triggers>
            </Rectangle>

            <Rectangle Width="20" Height="125" Margin="10" Fill="DodgerBlue" RenderTransformOrigin="0.5,1">
                <Rectangle.RenderTransform>
                    <ScaleTransform x:Name="scale3" ScaleY="1" />
                </Rectangle.RenderTransform>
                <Rectangle.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                <DoubleAnimation Storyboard.TargetName="scale3" 
                                                 Storyboard.TargetProperty="ScaleY"
                                                 From="1" To="0.3"
                                                 Duration="0:0:1.2"
                                                 BeginTime="0:0:0.3">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseInOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Rectangle.Triggers>
            </Rectangle>

            <Rectangle Width="20" Height="125" Margin="10" Fill="DodgerBlue" RenderTransformOrigin="0.5,1">
                <Rectangle.RenderTransform>
                    <ScaleTransform x:Name="scale4" ScaleY="1" />
                </Rectangle.RenderTransform>
                <Rectangle.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                <DoubleAnimation Storyboard.TargetName="scale4" 
                                                 Storyboard.TargetProperty="ScaleY"
                                                 From="1" To="0.3"
                                                 Duration="0:0:1.3"
                                                 BeginTime="0:0:0.45">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseInOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Rectangle.Triggers>
            </Rectangle>

            <Rectangle Width="20" Height="125" Margin="10" Fill="DodgerBlue" RenderTransformOrigin="0.5,1">
                <Rectangle.RenderTransform>
                    <ScaleTransform x:Name="scale5" ScaleY="1" />
                </Rectangle.RenderTransform>
                <Rectangle.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                <DoubleAnimation Storyboard.TargetName="scale5" 
                                                 Storyboard.TargetProperty="ScaleY"
                                                 From="1" To="0.3"
                                                 Duration="0:0:1.4"
                                                 BeginTime="0:0:0.6">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseInOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Rectangle.Triggers>
            </Rectangle>
        </StackPanel>
    </Grid>
</UserControl>
