<UserControl x:Class="TaskFlow.Controls.TaskCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskFlow.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="250" Height="150" Width="250">
    <Grid Margin="6">
        <Border Background="White" CornerRadius="15">
            <Grid Margin="10, 6, 10, 6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <StackPanel x:Name="TaskDataStackPanel" Grid.Row="0">
                    <TextBlock x:Name="TaskName" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding TaskName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" FontSize="18" TextWrapping="Wrap" FontFamily="Bahnschrift SemiLight SemiCondensed"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="TaskCreated" VerticalAlignment="Center" HorizontalAlignment="Left" Text="Created: 25.07.25" Grid.Row="1" FontSize="14" Foreground="#FF969696" FontFamily="Bahnschrift SemiLight SemiCondensed"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Grid.Row="1">
                    <Border x:Name="TaskPriority" Height="20" Background="{Binding PriorityColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" CornerRadius="4" Margin="0.5">
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding TaskPriority, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="12" Foreground="White" FontFamily="Bahnschrift SemiLight SemiCondensed" Padding="5"/>
                    </Border>
                    <Border x:Name="TaskStatus" Height="20" Width="65" Background="#FF41A45D" CornerRadius="4" Margin="1, 0, 0, 0">
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="In progress" FontSize="12" Foreground="White" FontFamily="Bahnschrift SemiLight SemiCondensed"/>
                    </Border>
                </StackPanel>

                <Border x:Name="TaskAuthor" VerticalAlignment="Bottom" HorizontalAlignment="Left" Grid.Row="2">
                    <TextBlock>
                        <Run Text="Author:" FontSize="14" Foreground="Black" FontFamily="Bahnschrift SemiLight SemiCondensed"/>
                        <Run Text="{Binding TaskAuthor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Foreground="Black" FontFamily="Bahnschrift SemiLight SemiCondensed"/>
                    </TextBlock>
                </Border>
            </Grid>
            <Border.Effect>
                <DropShadowEffect Color="Black"
                                  ShadowDepth="0"
                                  BlurRadius="6"
                                  Opacity="0.7" />
            </Border.Effect>
        </Border>
    </Grid>
</UserControl>
